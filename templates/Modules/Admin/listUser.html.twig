{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - List Projects{% endblock %}

{% block body %}



	
<div class="datacontainer adminuserlist">
<h3>MediLux User</h3><br/>	
    <table class="table table-dark table-striped table-bordered table-hover adminuserlisttable">
        <tr class="tableHeader">
            <td>User Name</td>
			<td>First Name</td>
			<td>Last Name</td>
			<td>More Options</td>
			
        </tr>
        
        {% for mluser in users %}
                <tr>

                    <td>{{ mluser.username }}</td>
                    <td>{{ mluser.firstname }}</td>
					<td>{{ mluser.lastname }}</td>
			                 
  					<td>
  					
  						<button type="button" class="btn" data-toggle="modal" data-target="#{{ mluser.username }}">
 							 <a data-toggle="popover" data-trigger="hover" data-content="user details"><i class="fas fa-info-circle"></i></a>
						</button>
  						<button type="button" class="btn">
 							 
 							 <a data-toggle="popover" data-trigger="hover" data-content="delete user"><i class="fas fa-minus-circle"></i></a>
						</button>						
												
					</td>
                </tr>
            
        {% endfor %}
    </table>
</div>




{% for mluser in users %}
    <!-- The Modal -->
    <div class="modal fade" id="{{ mluser.username }}">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content mainbg">
    
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Details for {{ mluser.username }}</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
    
          <!-- Modal body -->
          <div class="modal-body">
          <table class="table">
                <thead class="thead-dark">
                    <tr>
                      <th scope="col">Firstname</th>
                      <th scope="col">Lastname</th>
					  <th scope="col">Role</th>
                    </tr>
            	</thead>  
            	<tbody>
                      <th scope="col">{{ mluser.firstname }}</th>
                      <th scope="col">{{ mluser.lastname }}</th>
					  <th scope="col">
					      {% for role in mluser.roles %}
					      	{% if role == "ROLE_USER" %}
            	                User
            	            {% endif %}
					      	{% if role == "ROLE_ADMIN" %}
            	                Admin
            	            {% endif %}            	            
                          {% endfor %}
                      </th>            	
            	</tbody>        	
          </table>
    
            {% for acl in mluser.ACLs %}
            
            <br/>
            <h5>ACL - Modules</h5>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                      <th scope="col">Search</th>
                      <th scope="col">Patient</th>
                      <th scope="col">Address Book</th>
                      <th scope="col">Drugs</th>
					  <th scope="col">Admin</th>
                    </tr>
            	</thead>
      			<tbody>
            		<tr class="bg-success">
                		<td>
                            {% if acl.search == 1 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="granted"><i class="fas fa-check-circle"></i></a>
                            {% endif %}
                            {% if acl.search == 0 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="no permission"><i class="fas fa-times-circle"></i></a>
                            {% endif %}
    					</td>
    					<td>
                            {% if acl.patient == 1 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="granted"><i class="fas fa-check-circle"></i></a>
                            {% endif %}
                            {% if acl.patient == 0 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="no permission"><i class="fas fa-times-circle"></i></a>
                            {% endif %}    					
    					</td>
    					<td>
                            {% if acl.addressbook == 1 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="granted"><i class="fas fa-check-circle"></i></a>
                            {% endif %}
                            {% if acl.addressbook == 0 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="no permission"><i class="fas fa-times-circle"></i></a>
                            {% endif %}
						</td>
    					<td>
                            {% if acl.drugs == 1 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="granted"><i class="fas fa-check-circle"></i></a>
                            {% endif %}
                            {% if acl.drugs == 0 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="no permission"><i class="fas fa-times-circle"></i></a>
                            {% endif %}    					
    					</td>
    					<td>
                            {% if acl.admin == 1 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="granted"><i class="fas fa-check-circle"></i></a>
                            {% endif %}
                            {% if acl.admin == 0 %}
                            	<a data-toggle="popover" data-trigger="hover" data-content="no permission"><i class="fas fa-times-circle"></i></a>
                            {% endif %}    					
    					</td>        		
            		</tr>
            	</tbody>
            </table>

            {% endfor %} 
            
            
          </div>
    
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
    
        </div>
      </div>
    </div>	
 {% endfor %}


	
	
{% endblock %}