{% extends 'base.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="/css/address_style.css">
{% endblock %}

{% block body %}

	
	
	<table class="cardmedilux table table-hover table-striped">
	
      <thead>
        <tr>
          <th scope="col">
          	#
          </th>
          <th scope="col">
          	<form method="post">
          	<div class="input-group">
          		
  				<input id="specialization" for="specialization" placeholder="speciality" type="text" class="form-control">
			</div>
			</form>
			<div class="dropdown"></div>
          </th>
          <th scope="col">
          	<div class="input-group">
  				<input placeholder="Lastname" type="text" class="form-control">
			</div>
          </th>
          <th scope="col">
          	<div class="input-group">
  				<input placeholder="Firstname" type="text" class="form-control">
			</div>
          </th>
          <th scope="col">
          	<div class="input-group">
  				<input placeholder="telephone" type="text" class="form-control">
			</div>
          </th>
          <th>
          	<a type="button" class="btn btn-primary" href="{{ path ('addressbook_add') }}">{{ 'ADDRESSBOOK.ADD'|trans }}</a>
          </th>
        </tr>
      </thead>
      <tbody>
      	{% for value in doctor %}
      		
        <tr>
          <th scope="row">{{ value.id }}</th>
          <td>{{ value.specialization }}</td>
          <td>{{ value.lastname }}</td>
          <td>{{ value.firstname }}</td>
          <td>{{ value.telwork }}</td>
{#           <td><a type="button" class="btn btn-success" href="{{ path('addressbook_detail', {'doctor': value.id}) }}">{{ 'ADDRESSBOOK.DETAIL'|trans }}</a></td>#}
          <td>
          <!-- Button trigger modal -->
    	  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{ value.id }}">
          {{ 'ADDRESSBOOK.DETAIL'|trans }}
          </button>
          </td>
        </tr>
        <!-- Modal -->
        {% for addressValue in address %}
        <div class="modal fade" id="{{ value.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLongTitle">{{ value.title }}{{ value.firstname }}{{ value.lastname }}</h1>
                <h2>{{ value.specialization }}</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
              <h6>{{ value.language }}</h6>
              <h6>{{ value.mobile }}</h6>
              <h6>{{ value.telwork }}</h6>
              <h6>{{ value.telpriv }}</h6>
              <h6>{{ value.email }}</h6>
              <h6>{{ value.fax }}</h6>
              <h5>Address</h5>
              
              <h6>{{ addressValue.id }}</h6>
              <h6>{{ addressValue.zip }}</h6>
              
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
        	{% endfor %}
        {% endfor %}
      </tbody>
	</table>   
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="/js/searchDoctor.js"></script>
{% endblock %}