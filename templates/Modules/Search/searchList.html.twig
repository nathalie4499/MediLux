{% extends 'base.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
<link rel="stylesheet" type="text/css" href="/css/search_style.css">
{% endblock %}

{% block body %}

<div class="datacontainer">
<br>
  <div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <form action="" class="search-form" method="post">
            	<div class="form-group">
            		<label for="search" class="sr-only">Search</label>
            			<input type="text" class="form-control" name="search" id="search" placeholder="search by Birth Name">

            	</div>
            </form>
        </div>
    </div>
</div>
  
  
  
<br>

   <div class="table-responsive"></div>
   
   	<table class="table table-striped table-dark table-bordered table-sm table-hover">
    		<thead>
    			<tr>
    				<th scope="col">SSN</th>
    				<th scope="col">Given Name</th>
    				<th scope="col">Birth Name</th>
    				<th scope="col">Marital Name</th>
    				<th scope="col">Nationality</th>
    				<th scope="col">Telephone</th>
    				<th scope="col">Age</th>
    				<th><i class="fas fa-info-circle"></i></th> 
    			</tr>
    		</thead>
    		<tbody class='result'>
    		
    		
{% for patient in patients %}

<tr>

    			<td>{{ patient.ssn }}</td>
    			<td>{{ patient.givenname }}</td>
    			<td>{{ patient.birthname }}</td>
    			<td>{{ patient.maritalname }}</td>
    			<td>{{ patient.nationality }}</td>
    			<td>{{ patient.telephone }}</td>
    			<td>{{ patient.age }}</td>
    			<td><a href="{{ path('useredit', { 'userid': patient.getID() }) }}" data-toggle="popover" data-trigger="hover" data-content="patient details"><i class="fas fa-info-circle"></i></a></td>

</tr>
{% endfor %}
  		
    		</tbody>

  		</table>
</div> 		
  		
  			
    </div> </div>
  <br>
  

 </div>
<br>







{% endblock %}
{% block javascripts %}

	{{ parent() }}
	
	<script src="/js/search.js"></script>

{% endblock %}



        
  